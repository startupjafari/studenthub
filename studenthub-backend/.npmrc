# NPM Configuration for Docker builds
# Увеличиваем timeout для медленных соединений
fetch-timeout=300000
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Используем registry с лучшей доступностью
registry=https://registry.npmjs.org/

# Логирование для отладки
loglevel=warn

# Отключаем audit для ускорения сборки (можно включить для production)
audit=false

# Кеширование
cache=/root/.npm
prefer-offline=false
